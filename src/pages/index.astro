---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
---

<Layout title="CSFA 47">
	<main class="bg-slate-900 h-screen w-full">
		<Header />
		<section class="flex justify-center text-white">
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<div class="bg-orange-500 rounded-lg m-2 text-center pb-2">
					<div class="bg-orange-600 rounded-lg px-4 py-1">
						<h2 class="text-lg font-bold">Secuandario</h2>
					</div>
					<div class="px-4 text-left">
						<h3 class="font-medium">Contamos con las siguientes carreras:</h3>
