---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="CSFA 47 - Terciario">
    <main class="bg-zinc-900 h-screen w-full">
        <header class="flex items-center justify-between text-white bg-zinc-800">
            <div class="flex items-center">
                <img src="/public/logo.png" class="w-32 px-5 py-2" alt="logonacio" />
                <div>
                    <h2 class="text-2xl font-medium">Colegio superior</h2>
                    <h2 class="text-2xl font-medium">Florentino Ameghino n47</h2>
                </div>
            </div>
        </header>
        <section class="bg-blue-700 my-4">
            <h1>Invitación a estudiar alguna de las carreras</h1>
        </section>
        <section class="m-4">
            <h1 class="text-2xl font-semibold">Horarios</h1>
            <div class="bg-blue-500 p-4 m-4 rounded-sm">Diseño Gráfico y Publicitario</div>
            <div class="bg-blue-500 p-4 m-4 rounded-sm">Comercialización</div>
            <div class="bg-blue-500 p-4 m-4 rounded-sm">Análisis Funcional de Sistemas Informáticos</div>
            <div class="bg-blue-500 p-4 m-4 rounded-sm">Infraestructura de Tecnología de la Información</div>
        </section>
        <section class="bg-blue-400"><h1>Mesas de Examen</h1></section>
    </main>
</Layout>
